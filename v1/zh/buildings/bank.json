    "game_info": "\u57ce\u5e02\u4e2d\u9808\u5df2\u5efa\u6210\u5e02\u5834\u3002",
    "strategy": "\u9280\u884c\u70ba\u6587\u85dd\u5fa9\u8208\u6642\u4ee3\u5efa\u7bc9\uff0c\u53ef\u589e\u52a0\u57ce\u5e02\u7684\u91d1\u5e63\u7522\u51fa\u3002\u57ce\u5e02\u5728\u5efa\u9020\u9280\u884c\u524d\u5fc5\u9808\u64c1\u6709\u5e02\u5834\u6216\u963f\u62c9\u4f2f\u5e02\u96c6\u3002\u5176\u4ed6\u73a9\u5bb6\u6240\u5efa\u9020\u7684\u5546\u8def\u901a\u904e\u6709\u9280\u884c\u7684\u57ce\u5e02\u6642\uff0c\u53ef\u70ba\u57ce\u5e02\u7684\u64c1\u6709\u8005\u984d\u5916\u63d0\u4f9b1\u91d1\u5e63\uff0c\u5546\u8def\u7684\u64c1\u6709\u8005\u984d\u5916\u7372\u5f971\u91d1\u5e63\u3002",
    "historical_info": "\u9280\u884c\u662f\u4e00\u500b\u53ef\u4ee5\u8b93\u5e02\u6c11\u5b58\u653e\u9322\u8ca1\u4e26\u4fdd\u8b49\u5176\u5b89\u5168\u7684\u6a5f\u69cb\u3002\u9280\u884c\u5bb6\u6703\u5c07\u6c11\u773e\u5b58\u5165\u7684\u9322\u8f49\u501f\u7d66\u5176\u4ed6\u4eba\uff0c\u800c\u501f\u6b3e\u4eba\u5728\u9084\u56de\u672c\u91d1\u7684\u540c\u6642\uff0c\u9084\u9700\u7e73\u4ea4\u984d\u5916\u7684\u8cbb\u7528\uff08\u5373\u5229\u606f\uff09\u3002\u9280\u884c\u5bb6\u6703\u5c07\u90e8\u5206\u5229\u6f64\u5206\u7d66\u5132\u6236\uff0c\u7136\u5f8c\u518d\u5229\u7528\u5176\u9918\u7684\u5229\u6f64\u9032\u884c\u6295\u8cc7\u3002\u6210\u529f\u7684\u9280\u884c\u7cfb\u7d71\u9700\u8981\u4e00\u7a2e\u53ef\u6d41\u901a\u7684\u8ca8\u5e63\uff0c\u4ee5\u53ca\u53ef\u4fdd\u8b49\u5927\u90e8\u5206\u501f\u6b3e\u4eba\u90fd\u6703\u511f\u9084\u501f\u6b3e\u7684\u6cd5\u5f8b\u898f\u5b9a\u3002\u9280\u884c\u662f\u6587\u660e\u767c\u5c55\u7684\u91cd\u8981\u52d5\u529b\u4e4b\u4e00\uff0c\u5982\u679c\u57ce\u5e02\u6709\u4efb\u4f55\u9700\u8981\uff0c\u4f8b\u5982\u4e00\u5ea7\u65b0\u7684\u7a40\u5009\uff0c\u9019\u7a2e\u5efa\u8a2d\u662f\u500b\u4eba\u7121\u6cd5\u8ca0\u64d4\u5f97\u8d77\u7684\u3002\u4f46\u662f\uff0c\u56e0\u70ba\u9280\u884c\u6536\u96c6\u4e86\u8a31\u591a\u5132\u6236\u7684\u5132\u91d1\uff0c\u6240\u4ee5\u5c31\u53ef\u4ee5\u5c07\u9322\u501f\u7d66\u5efa\u9020\u8005\u3002\u7b49\u7a40\u5009\u5efa\u597d\u4ee5\u5f8c\uff0c\u5efa\u9020\u8005\u5c31\u53ef\u4ee5\u5229\u7528\u7a40\u5009\u7372\u5f97\u7684\u5229\u6f64\u4f86\u511f\u9084\u9280\u884c\u7684\u8cb8\u6b3e\uff0c\u800c\u57ce\u5e02\u4e2d\u7684\u6240\u6709\u5e02\u6c11\u4e5f\u53ef\u4ee5\u4eab\u53d7\u5230\u65b0\u7a40\u5009\u5e36\u4f86\u7684\u597d\u8655\uff08\u9084\u6709\u4ed6\u5011\u5229\u7528\u5132\u84c4\u6240\u8cfa\u53d6\u7684\u5229\u606f\uff09\u3002\u6b50\u6d32\u548c\u7f8e\u570b\u7684\u9280\u884c\u8fd1\u5e74\u4f86\u90fd\u767c\u751f\u904e\u88ab\u6c11\u773e\u6307\u8cac\u7684\u554f\u984c\uff0c\u4e0d\u904e\u9019\u901a\u5e38\u662f\u56e0\u70ba\u4ed6\u5011\u904e\u5ea6\u6295\u5165\u9ad8\u98a8\u96aa\u6295\u8cc7\u8a08\u756b\uff0c\u6216\u8005\u662f\u501f\u8cb8\u653e\u6b3e\u898f\u5b9a\u904e\u65bc\u5bec\u9b06\u6240\u81f4\u3002\u71df\u904b\u826f\u597d\u7684\u9280\u884c\u5c0d\u793e\u7fa4\u4f86\u8aaa\u662f\u4e00\u5927\u798f\u97f3\uff0c\u5c0d\u8f03\u8ca7\u7aae\u7684\u793e\u7fa4\u66f4\u662f\u5982\u6b64\u3002",
